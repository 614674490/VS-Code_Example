    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python3.8.2: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}", //运行程序所在文件-当前文件
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "pythonPath": "E:\\Python3.8.2\\python.exe",
            "cwd": "${fileDirname}",
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "E:\\Python3.7.4",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "E:\\Python3.7.4",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
    ]
}
